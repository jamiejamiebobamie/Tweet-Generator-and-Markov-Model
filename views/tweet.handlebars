<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Dead-Writer Tweets</title>
        <!-- added handlebars style-ref -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    </head>
    <body>
         <div class="video-container">
              <div class="dynamic">
              <video autoplay muted loop id="myVideo">
                <source src="/videos/1door-closed-A.mp4">
              </video>
              </div>
              <div class="static">
              <video autoplay muted loop id="myVideo-background">
                <source src="/videos/1door-closed-A.mp4">
              </video>
              </div>
         </div>


         <div class="jar_button">
             <input id="jar" style="width:130px;height:130px;border-radius: 12px;" type="button" value="jar" >
         </div>
         <div class="jar_image">
             <img src="/imgs/jar_icon.png" width="130" height="130"/>
         </div>
         <div class="tweet_button">
             <input id="Tweet" style="width:105px;height:105px;border-radius: 12px;" type="button" value="Tweet" >
         </div>
         <div class="tweet_image">
             <img src="/imgs/tweet_icon.png" width="80" height="80"/>
         </div>

        <div class="Grimm">
        <input id="Grimm" style="width:205px;height:185px;border-radius: 12px;" type="button" onclick="setTimeout(myFunction1, 2000)" value="The Brothers Grimm" >
        </div>

        <div class="Poe">
        <input id="Poe" style="width:115px;height:130px;border-radius: 12px;" type="button" onclick="setTimeout(myFunction2, 2000)" value="Edgar Allan Poe" >
        </div>

        <div class="Wilde">
        <input id="Wilde" style="width:80px;height:160px;border-radius: 12px;" type="button" onclick="setTimeout(myFunction3, 2000)" value="Oscar Wilde" >
        </div>

        <div class="Woolf">
        <input id="Woolf" style="width:90px;height:100px;border-radius: 12px;" type="button" onclick="setTimeout(myFunction4, 2000)" value="Virginia Woolf" >
        </div>

        <div class="Carroll">
        <input id="Carroll" style="width:90px;height:100px;border-radius: 12px;" type="button" onclick="setTimeout(myFunction5, 2000)" value="Lewis Carroll" >
        </div>

        <div class="Shakespeare">
        <input id="Shakespeare" style="width:80px;height:200px;border-radius: 12px;" type="button" onclick="setTimeout(myFunction6, 2000)" value="William Shakespeare" >
        </div>

        <div class="Lovecraft">
        <input id="Lovecraft" style="width:200px;height:120px;border-radius: 12px;" type="button" onclick="setTimeout(myFunction7, 2000)" value="HP Lovecraft" >
        </div>

        <div class="popup1" onclick="goHere(0)">
          <span class="popuptext" id="myPopup1">{{msg1}}</span></div>

        <div class="popup2" onclick="goHere(1)">
          <span class="popuptext" id="myPopup2">{{msg2}}</span></div>

        <div class="popup3" onclick="goHere(2)">
          <span class="popuptext" id="myPopup3">{{msg3}}</span></div>

        <div class="popup4" onclick="goHere(3)">
          <span class="popuptext" id="myPopup4">{{msg4}}</span></div>

        <div class="popup5" onclick="goHere(4)">
          <span class="popuptext" id="myPopup5">{{msg5}}</span></div>

        <div class="popup6" onclick="goHere(5)">
          <span class="popuptext" id="myPopup6">{{msg6}}</span></div>

        <div class="popup7" onclick="goHere(6)">
          <span class="popuptext" id="myPopup7">{{msg7}}</span></div>

        <script src="./../app.js" type="text/javascript"></script>
        <script src="./../scripts/tweet_handlebars_interactivity.js" type="text/javascript"></script>
    </body>
</html>
